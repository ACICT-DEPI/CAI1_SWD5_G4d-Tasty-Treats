@model TastyTreats.ViewModel.UserDetailsViewModel
@{
    ViewData["Title"] = "User Details";
}

<section style="margin:77px; padding:30px">

    <h1>User Details</h1>
    <hr />
    <div>
        <div>
            @if (Model.User == null)
            {
                <div>
                    <center>
                        <h4>There is no User found</h4>
                    </center>
                </div>
            }
            else
            {
                <div style="display: flex; align-items: center;">
                    <!-- Image Container -->
                    <div style="margin-right: 20px;">
                        <div style="border-radius:20px; width:250px; height:250px; border: 2px solid black; display: flex; align-items: center; justify-content: center; overflow: hidden;">
                            @if (Model.User.UserPicture == null)
                            {
                                <img src="~/imag/default.jpg" style="width: 100%; height: 100%; object-fit: cover;" />
                            }
                            else
                            {
                                <img src="@Model.User.UserPicture" style="width: 100%; height: 100%; object-fit: cover;" />
                            }
                        </div>
                    </div>

                    <!-- Text Content Container -->
                    <dl>
                        <dt>
                            @Html.DisplayNameFor(model => model.User.Name)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.User.Name)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.User.UserName)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.User.UserName)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.User.Email)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.User.Email)
                        </dd>
                        <dt>
                            @Html.DisplayNameFor(model => model.User.Phone)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.User.Phone)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.User.City)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.User.City)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.User.Address)
                        </dt>
                        <dd>
                            @Html.DisplayFor(model => model.User.Address)
                        </dd>

                        <!-- Roles Section -->
                        <dt>Roles</dt>
                        <dd>
                            @if (Model.Roles != null && Model.Roles.Any())
                            {
                                @foreach (var role in Model.Roles)
                                {
                                    <span class="badge bg-warning text-dark">@role</span>
                                }
                            }
                            else
                            {
                                <span>No roles assigned</span>
                            }
                        </dd>
                    </dl>
                </div>
            }
        </div>
    </div>

    <div class="mt-4 ms-1">
        <a asp-action="Edit" asp-route-id="@Model?.User.Id">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</section>
