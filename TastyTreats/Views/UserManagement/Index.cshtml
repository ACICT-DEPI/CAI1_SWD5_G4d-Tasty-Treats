@model IEnumerable<TastyTreats.ViewModel.UserWithRolesViewModel>

@{
    ViewData["Title"] = "View";
}

<section style="margin-top:77px; padding:30px;">

    <h1>View All Users</h1>

    <p>
        <a asp-action="Create" class="btn btn-outline-warning">Add New User</a>
    </p>

    @if (Model.Any())
    {
        <table class="table table-dark" style="padding:10px; text-align:center;">
            <thead>
                <tr>
                    <th>Full Name</th>
                    <th>@Html.DisplayNameFor(model => model.First().User.Email)</th>
                    <th>Picture</th>
                    <th>@Html.DisplayNameFor(model => model.First().User.Address)</th>
                    <th>@Html.DisplayNameFor(model => model.First().User.Phone)</th>
                    <th>@Html.DisplayNameFor(model => model.First().User.City)</th>
                    <th>Role</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.User.Name)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.Email)</td>
                        <td>
                            <img src="@item.User.UserPicture" alt="@item.User.Name picture" width="100px" height="100px" class="img-thumbnail" />
                        </td>
                        <td>@Html.DisplayFor(modelItem => item.User.Address)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.Phone)</td>
                        <td>@Html.DisplayFor(modelItem => item.User.City)</td>
                        <td>
                            @foreach (var role in item.Roles)
                            {
                                <span class="badge bg-warning text-dark">@role</span>
                            }
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.User.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.User.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.User.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <center>
            <h3>There are no users here, add some.</h3>
        </center>
    }
</section>
