@model Category

<h1 class="text-center" style="color:#CDA45E">Update Category</h1>

<form method="post" asp-action="Edit" asp-controller="Category">
  <div class="container mt-5">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" type="text" />
        <span asp-validation-for="Name" class="text-danger"></span>

    </div>

    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" type="text" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <button type="submit" class="btn" style="background-color:#CDA45E; color:white;">Edit Category</button>
        <a asp-action="Index" class="btn btn-secondary ml-3">Back to list</a>
    </div>
</form>
</div>