@model Category

<h1 class="text-center" style="color:#CDA45E">Add new Category</h1>
<form method="post" asp-action="Add" asp-controller="Category">

<div class="container mt-5">

  <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" type="text" style="color:#CDA45E"/>
        <span asp-validation-for="Name" class="text-danger"></span>
  </div>

  <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" type="text" style="color:#CDA45E"/>
        <span asp-validation-for="Description" class="text-danger"></span>
  </div>

  <div class="form-group mt-4">
            <button type="submit" class="btn" style="background-color:#CDA45E; color:white;">Add Category</button>
            <a asp-action="Index" class="btn btn-secondary ml-3">Back to list</a>
  </div>
  </form>
  
</div>