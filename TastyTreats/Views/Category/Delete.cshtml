@model Category

<h1 class="text-center" style="color:#CDA45E">Delete Category</h1>

  <div class="container mt-5">
    <div class="alert alert-danger">
        Are you sure you want to delete this category: <strong>@Model.Name</strong>
    </div>

    <form method="post" asp-action="Delete" asp-controller="Category">
        <input type="hidden" asp-for="CategoryId" />

        <div class="form-group">
            <button type="submit" class="btn btn-danger">Yes,delete</button>
            <a asp-action="Index" class="btn btn-secondary">No,Cancel</a>
        </div>
    </form>
  </div>