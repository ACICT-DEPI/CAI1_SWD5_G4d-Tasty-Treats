@model Item

@{
    ViewBag.Title = "Item Details";
}

<h2>Item Details</h2>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Picture</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ItemPicture))
            {
                <img src="@Model.ItemPicture" alt="@Model.Name" width="100" height="100" />
            }
            else
            {
                <span>No Image</span>
            }
        </dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Discount</dt>
        <dd class="col-sm-10">@Model.Discount?.ToString("C")</dd>

        <dt class="col-sm-2">Final Price</dt>
        <dd class="col-sm-10">@Model.FinalPrice.ToString("C")</dd>

        <dt class="col-sm-2">Availability</dt>
        <dd class="col-sm-10">@Model.Availability</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<p>
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
</p>
